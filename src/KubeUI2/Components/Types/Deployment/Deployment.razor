@namespace KubeUI2.Components.Types
<h2>
    <a href="/@Namespace/Deployments">Deployments</a> / @Item?.Metadata.Name
</h2>

<br />
@if (Item != null)
{
    <BSTabGroup>
        <BSTabList>

            <BSTab>
                <BSTabLabel>Overview</BSTabLabel>
                <BSTabContent>
                    <br />
                    <h4>Replica Sets</h4>
                    <ReplicaSetList Namespace="@Item.Metadata.NamespaceProperty" OwnerUid="@Item.Metadata.Uid" />

                    <br />
                    <h4>Persistent Volume Claims</h4>
                    <PersistentVolumeClaimList Namespace="@Item.Metadata.NamespaceProperty" Names="@(Item.Spec.Template.Spec.Volumes.Where(y => y.PersistentVolumeClaim != null).Select(y => y.PersistentVolumeClaim.ClaimName).ToArray())" />
                </BSTabContent>
            </BSTab>

            <BSTab>
                <BSTabLabel>Yaml</BSTabLabel>
                <BSTabContent><pre><code id="yamlViewer" class="language-yaml">@k8s.Yaml.SaveToString(Item)</code></pre></BSTabContent>
            </BSTab>

            <BSTab>
                <BSTabLabel>UI</BSTabLabel>
                <BSTabContent><KubeUI2.Components.Dynamic.UI Item="@Item" /></BSTabContent>
            </BSTab>

        </BSTabList>
        <BSTabSelectedContent />
    </BSTabGroup>
}