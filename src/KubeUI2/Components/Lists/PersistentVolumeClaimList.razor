@namespace KubeUI2

<Table PageSize="20" TableItem="V1PersistentVolumeClaim" Items="Items">
    <Column TableItem="V1PersistentVolumeClaim" Title="Name" Field="@(x => x.Metadata.Name)" Sortable="true" Filterable="true">
        <Template>
            <a href="/@context.Metadata.NamespaceProperty/Pod/@context.Metadata.Name">@context.Metadata.Name</a>
        </Template>
    </Column>
    <Column TableItem="V1PersistentVolumeClaim" Title="Requests">
        <Template>
            @context.Spec.Resources.Requests["storage"]
        </Template>
    </Column>
    <Column TableItem="V1PersistentVolumeClaim" Title="Age" Field="@(x => x.Metadata.CreationTimestamp)" Sortable="true" Filterable="true">
        <Template>
            @string.Format("{0:N0}d", (DateTime.UtcNow - context.Metadata.CreationTimestamp).Value.TotalDays)
        </Template>
    </Column>
    <Column TableItem="V1PersistentVolumeClaim" Title="Actions" Align="Align.Center">
        <Template>
            <BSButtonGroup DropdownDirection="DropdownDirection.Left">
                <BSDropdown>
                    <BSDropdownToggle Color="Color.Secondary" Size="Size.Small">⚙️</BSDropdownToggle>
                    <BSDropdownMenu>
                        <BSDropdownItem Href="javascript:void(0);" OnClick="@(async () => await Delete(context))">Delete</BSDropdownItem>
                    </BSDropdownMenu>
                </BSDropdown>
            </BSButtonGroup>
        </Template>
    </Column>
    <Pager TableItem="V1PersistentVolumeClaim" ShowPageNumber="true" ShowTotalCount="true" />
</Table>