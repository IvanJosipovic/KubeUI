@namespace KubeUI.Core.Components.Types
    <h2>
        <img src="_content/KubeUI.Core/png/resources/unlabeled/sc-128.png" width="32"> <a href="/@State.Namespace/Secrets">Secrets</a> / @Item?.Metadata.Name
    </h2>

<br />
@if (Item != null)
{
    <BSTabGroup>
        <BSTabList>

            <BSTab>
                <BSTabLabel>Overview</BSTabLabel>
                <BSTabContent>

                </BSTabContent>
            </BSTab>

            <BSTab>
                <BSTabLabel>Yaml</BSTabLabel>
                <BSTabContent><YamlViewer Yaml="@k8s.Yaml.SaveToString(Item)" /></BSTabContent>
            </BSTab>

            <BSTab>
                <BSTabLabel>UI</BSTabLabel>
                <BSTabContent><KubeUI.Core.Components.Dynamic.UI Item="@Item" /></BSTabContent>
            </BSTab>

        </BSTabList>
        <BSTabSelectedContent />
    </BSTabGroup>
}