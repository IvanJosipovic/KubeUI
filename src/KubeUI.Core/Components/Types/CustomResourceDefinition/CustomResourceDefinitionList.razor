@namespace KubeUI.Core.Components.Types

<Table PageSize="20" TableItem="V1CustomResourceDefinition" Items="Items">
    <Column TableItem="V1CustomResourceDefinition" Title="Name" Field="@(x => x.Metadata.Name)" Sortable="true" Filterable="true">
        <Template>
            <a href="/CustomResourceDefinition/@context.Metadata.Name">@context.Metadata.Name</a>
        </Template>
    </Column>
    <Column TableItem="V1CustomResourceDefinition" Title="Group" Field="@(x => x.Spec.Group)" Sortable="true" Filterable="true" />
    <Column TableItem="V1CustomResourceDefinition" Title="Age" Field="@(x => x.Metadata.CreationTimestamp)" Sortable="true" Filterable="true" Width="7%">
        <Template>
            @string.Format("{0:N0}d", (DateTime.UtcNow - context.Metadata.CreationTimestamp).Value.TotalDays)
        </Template>
    </Column>
    <Column TableItem="V1CustomResourceDefinition" Title="Actions" Align="Align.Center" Width="5%">
        <Template>
            <BSButtonGroup DropdownDirection="DropdownDirection.Left">
                <BSDropdown>
                    <BSDropdownToggle Color="Color.Secondary" Size="Size.Small">⚙️</BSDropdownToggle>
                    <BSDropdownMenu>
                        <BSDropdownItem Href="javascript:void(0);" OnClick="@(async () => await Delete(context))">Delete</BSDropdownItem>
                    </BSDropdownMenu>
                </BSDropdown>
            </BSButtonGroup>
        </Template>
    </Column>
    <Pager TableItem="V1CustomResourceDefinition" ShowPageNumber="true" ShowTotalCount="true" />
</Table>