@namespace KubeUI.Core.Components.Types

<Table PageSize="20" TableItem="V1Service" Items="Items">
    <Column TableItem="V1Service" Title="Name" Field="@(x => x.Metadata.Name)" Sortable="true" Filterable="true" Width="20%">
        <Template>
            <a href="/@context.Metadata.NamespaceProperty/Service/@context.Metadata.Name">@context.Metadata.Name</a>
        </Template>
    </Column>
    <Column TableItem="V1Service" Title="Labels" Width="15%">
        <Template>
            @foreach (var label in context.Metadata.Labels.OrEmptyIfNull().Take(2))
            {
                <BSBadge Color="Color.Secondary">@label.Key : @label.Value</BSBadge>
            }
        </Template>
    </Column>
    <Column Title="Selector" TableItem="V1Service" Width="15%">
        <Template>
            @foreach (var selector in context.Spec.Selector.OrEmptyIfNull().Take(2))
            {
                <BSBadge Color="Color.Secondary">@selector.Key : @selector.Value</BSBadge>
            }
        </Template>
    </Column>
    <Column Title="Type" TableItem="V1Service" Field="@(x => x.Spec.Type)" Sortable="true" Filterable="true" Width="7%" />
    <Column Title="Age" TableItem="V1Service" Field="@(x => x.Metadata.CreationTimestamp)" Sortable="true" Filterable="true" Width="7%">
        <Template>
            @string.Format("{0:N0}d", (DateTime.UtcNow - context.Metadata.CreationTimestamp).Value.TotalDays)
        </Template>
    </Column>
    <Column TableItem="V1Service" Title="Actions" Align="Align.Center" Width="5%">
        <Template>
            <BSButtonGroup DropdownDirection="DropdownDirection.Left">
                <BSDropdown>
                    <BSDropdownToggle Color="Color.Secondary" Size="Size.Small">⚙️</BSDropdownToggle>
                    <BSDropdownMenu>
                        <BSDropdownItem Href="javascript:void(0);" OnClick="@(async () => await Delete(context))">Delete</BSDropdownItem>
                    </BSDropdownMenu>
                </BSDropdown>
            </BSButtonGroup>
        </Template>
    </Column>
    <Pager TableItem="V1Service" ShowPageNumber="true" ShowTotalCount="true" />
</Table>