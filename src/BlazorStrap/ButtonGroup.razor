@inherits BootstrapComponentBase
@using BlazorStrap.util

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
</DynamicElement>

@code {
    string classname
    {
        get
        {
            var toggle = IsToggle ? "btn-group-toggle" : null;
            var direction = DropdownDirection != DropdownDirection.Down ? DropdownDirection.ToDescriptionString() : null;
            var groupdir = IsVertical ? "btn-group-vertical" : "btn-group";
            var baseclass = IsToolbar ? "btn-toolbar" : groupdir;
            var size = Size != Size.None ? $"btn-group-{Size.ToDescriptionString()}" : null;
            var open = IsOpen ? "show" : null;
            return $"{baseclass} {size} {toggle} {direction} {open} {Class}".RemoveUnneededSpaces();
        }
    }
    [Parameter] private bool IsOpen { get; set; }
    [Parameter] private bool IsToggle { get; set; }
    [Parameter] private bool IsToolbar { get; set; }
    [Parameter] private bool IsVertical { get; set; }
    [Parameter] private DropdownDirection DropdownDirection { get; set; } = DropdownDirection.Down;
    [Parameter] private Size Size { get; set; } = Size.None;
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}
