@inherits BootstrapComponentBase
@using  BlazorStrap.util

<DynamicElement Attributes="@UnknownParameters" TagName="form" class="@classname" @onsubmit="@OnSubmit">
    @ChildContent 
</DynamicElement>

@code {
    string classname
    {
        get
        {
            var inline = IsInline ? "form-inline" : null;
            return $"{inline} {Class}".RemoveUnneededSpaces();
        }
    }
    [Parameter] private bool IsInline { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
    [Parameter] private EventCallback<UIEventArgs> OnSubmit { get; set; }

