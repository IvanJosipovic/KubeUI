@inherits BootstrapComponentBase
@using  BlazorStrap.util

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="modal-header">
    <h5 class="@classname">@ChildContent</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="@OnClick" autofocus>
        <span aria-hidden="true">&times;</span>
    </button>
</DynamicElement>

@code {
    string classname => $"modal-title {Class}".RemoveUnneededSpaces();
    
    [Parameter] private EventCallback<UIMouseEventArgs> OnClick { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}