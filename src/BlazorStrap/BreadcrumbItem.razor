@inherits BootstrapComponentBase
@using  BlazorStrap.util

<DynamicElement Attributes="@UnknownParameters" TagName="li" class="@classname" aria-current="@aria">
    @ChildContent
</DynamicElement>


@code {
    private string classname
    {
        get
        {
            var active = IsActive ? "breadcrumb-item active" : "breadcrumb-item";
            return $"{active} {Class}".RemoveUnneededSpaces();
        }
    }
    private string aria => IsActive ? "page" : null;
    
    [Parameter] private bool IsActive { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}