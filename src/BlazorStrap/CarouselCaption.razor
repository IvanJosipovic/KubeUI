@inherits BootstrapComponentBase
@using  BlazorStrap.util

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @if (HeaderText != null)
    {
        <h5>@HeaderText</h5>
    }
    @if (CaptionText != null)
    {
        <p>@CaptionText</p>
    }
</DynamicElement>

@code {
    private string classname => $"carousel-caption d-none d-md-block {Class}".RemoveUnneededSpaces();
    
    [Parameter] private string Class { get; set; }
    [Parameter] private string CaptionText { get; set; }
    [Parameter] private string HeaderText { get; set; }
}