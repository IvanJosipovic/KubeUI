@inherits ColumnBase
@using  BlazorStrap.util

<DynamicElement Attributes="@UnknownParameters" TagName="label" class="@classname">
    @ChildContent
</DynamicElement>

@code {
    string classname
    {
        get
        {
            var check = IsCheck ? "form-check-label" : null;
            var size = GetColumnClass(null);
            var column = size != null ? "col-form-label" : null;
            return $"{check} {column} {size} {Class}".RemoveUnneededSpaces();
        }
    }
    [Parameter] private bool IsCheck { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}
