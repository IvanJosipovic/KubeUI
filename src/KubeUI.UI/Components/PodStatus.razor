@if (Pod.Status != null)
{
    foreach (var status in Pod.Status.ContainerStatuses.EnsureNotEmpty())
    {
        @containerStatus.Invoke(new Combine() { Metrics = podMetrics, Status = status});
    }

    foreach (var status in Pod.Status.InitContainerStatuses.EnsureNotEmpty())
    {
        @containerStatus.Invoke(new Combine() { Metrics = podMetrics, Status = status});
    }
}

@code {
    [Inject]
    private ClusterManager ClusterManager { get; set; }

    [Parameter]
    public V1Pod Pod { get; set; }

    private k8s.Models.PodMetrics podMetrics;

    protected override async Task OnInitializedAsync()
    {
        if (ClusterManager.GetActiveCluster().PodMetrics)
        {
            podMetrics = await ClusterManager.GetActiveCluster().GetPodMetrics(Pod.Namespace(), Pod.Name());
        }
    }

    RenderFragment<Combine> containerStatus = context =>
    @<MudTooltip Placement="Placement.Right">
        <ChildContent>
            @if (context.Status.State?.Running != null)
            {
                <MudAvatar Style="height:10px; width:10px; margin-right: 2px;" Color="Color.Success"></MudAvatar>
            }
            else if (context.Status.State?.Waiting != null)
            {
                <MudAvatar Style="height:10px; width:10px; margin-right: 2px;" Color="Color.Warning"></MudAvatar>
            }
            else if (context.Status.State?.Terminated != null)
            {
                if (context.Status.State.Terminated.Reason == "Completed")
                {
                    <MudAvatar Style="height:10px; width:10px; margin-right: 2px" Color="Color.Dark"></MudAvatar>
                }
                else
                {
                    <MudAvatar Style="height:10px; width:10px; margin-right: 2px" Color="Color.Warning"></MudAvatar>
                }
            }
        </ChildContent>
        <TooltipContent>
            <MudText Typo="Typo.body2">@context.Status.Name</MudText>
            @if (context.Status.State.Running != null && context.Status.State.Running.StartedAt.HasValue)
            {
                <MudText Typo="Typo.body2">Started at: @context.Status.State.Running.StartedAt.Value.ToLocalTime()</MudText>
                @if(context.Metrics != null)
                {
                    <MudText Typo="Typo.body2">CPU: @(context.Metrics.Containers.FirstOrDefault(x => x.Name == context.Status.Name)?.Usage["cpu"].ToDecimal() * 10000)m</MudText>
                    <MudText Typo="Typo.body2">Memory: @(context.Metrics.Containers.FirstOrDefault(x => x.Name == context.Status.Name)?.Usage["memory"].ToInt32() / 1000000)Mi</MudText>
                }
            }
            @if (context.Status.State.Waiting != null)
            {
                <MudText Typo="Typo.body2">Reason: @context.Status.State.Waiting.Reason</MudText>
                @if (!string.IsNullOrEmpty(context.Status.State.Waiting.Message))
                {
                    <MudText Typo="Typo.body2">Message: @context.Status.State.Waiting.Message</MudText>
                }
                @if (context.Status.State.Waiting.Reason == "CrashLoopBackOff")
                {
                    <MudText Typo="Typo.body2">Last State Reason: @context.Status.LastState.Terminated.Reason</MudText>
                    <MudText Typo="Typo.body2">Last State Exit Code: @context.Status.LastState.Terminated.ExitCode</MudText>
                    @if (!string.IsNullOrEmpty(context.Status.LastState.Terminated.Message))
                    {
                        <MudText Typo="Typo.body2">Last State Message: @context.Status.LastState.Terminated.Message</MudText>
                    }
                }
            }
            @if (context.Status.State.Terminated != null)
            {
                <MudText Typo="Typo.body2">Reason: @context.Status.State.Terminated.Reason</MudText>
                @if (!string.IsNullOrEmpty(context.Status.State.Terminated.Message))
                {
                    <MudText Typo="Typo.body2">Message: @context.Status.State.Terminated.Message</MudText>
                    <MudText Typo="Typo.body2">Exit Code: @context.Status.State.Terminated.ExitCode</MudText>
                }
                @if (context.Status.State.Terminated.StartedAt.HasValue)
                {
                    <MudText Typo="Typo.body2">Started at: @context.Status.State.Terminated.StartedAt.Value.ToLocalTime()</MudText>
                }
                @if (context.Status.State.Terminated.FinishedAt.HasValue)
                {
                    <MudText Typo="Typo.body2">Finished at: @context.Status.State.Terminated.FinishedAt.Value.ToLocalTime()</MudText>
                }
            }
        </TooltipContent>
    </MudTooltip>;

    public class Combine
    {
        public V1ContainerStatus Status { get; set; }
        public k8s.Models.PodMetrics Metrics { get; set; }
    }
}
