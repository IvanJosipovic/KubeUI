@namespace KubeUI.Core.Components.flux.io
@using BlazorMonaco

<MudCard>
    <MudSelect Dense="true" T="string" Label="Version" Variant="Variant.Filled" Value="SelectedVersion" ValueChanged="(async x => await SetCompareVersion(x) )">
        @foreach (var item in Versions)
        {
            <MudSelectItem Value="@item" />
        }
    </MudSelect>
    @if (!string.IsNullOrEmpty(SelectedVersion))
    {
        <CompareObject Left="HelmRelease" Right="Right" />

    }
</MudCard>
