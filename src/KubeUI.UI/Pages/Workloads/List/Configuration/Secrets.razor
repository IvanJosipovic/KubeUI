@page "/list/v1/secret"

<ListGeneric TItem="V1Secret">
    <Columns>
        <ColumnComponent TItem="V1Secret" Name="Keys" Object="(x => x.Data)">
            <DisplayContent>
                @context.Item1?.Data?.Keys.Aggregate((x,y) => x + "," + y).TrimAfter(20)
            </DisplayContent>
        </ColumnComponent>
        <ColumnComponent TItem="V1Secret" Name="Labels" Object="(x => x.Metadata.Labels)">
            <DisplayContent>
                @context.Item1?.Metadata.Labels?.Keys.Aggregate((x,y) => x + "," + y).TrimAfter(20)
            </DisplayContent>
        </ColumnComponent>
        <ColumnComponent TItem="V1Secret" Name="Type" Object="(x => x.Type)"/>
    </Columns>
</ListGeneric>

