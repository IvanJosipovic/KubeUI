@page "/Clusters"

<InputFile id="fileInput" OnChange="ImportConfig" hidden multiple />

<ResizePanel Context="resize" Offset="85">
    <MudDataGrid T="ICluster"
                 @bind-SelectedItems="SelectedItems"
                 Breakpoint="Breakpoint.None"
                 Dense="true"
                 Filterable="false"
                 FixedFooter="true"
                 FixedHeader="true"
                 Height="@resize"
                 Hover="true"
                 Items="this.ClusterManager.GetClusters()"
                 MultiSelection="true"
                 SortMode="SortMode.Single"
                 Virtualize="true">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Clusters</MudText>
            <MudSpacer />
            <MudIconButton OnClick="AddGitOpsCluster"
                        Title="Add GitOps Cluster"
                        Color="Color.Primary"
                        Icon="@Icons.Material.Filled.Code">
            </MudIconButton>
            &nbsp;
            <MudIconButton HtmlTag="label"
                        Title="Import Config"
                        Color="Color.Primary"
                        Icon="@Icons.Material.Filled.CloudUpload"
                        for="fileInput">
            </MudIconButton>
            &nbsp;
        </ToolBarContent>
        <Columns>
            <SelectColumn T="ICluster" ShowInFooter="false" Size="Size.Small" />

            <Column T="ICluster" Field="Name" HeaderStyle="width:95%"/>

            <Column T="ICluster" Sortable="false" Filterable="false" HeaderStyle="width:5%">
                <CellTemplate>
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" Size="Size.Small">
                        <MudMenuItem OnClick="@(() => Delete(context.Item))">Delete</MudMenuItem>
                    </MudMenu>
                </CellTemplate>
                <FooterTemplate>
                    @if (SelectedItems != null && SelectedItems.Count == 2)
                    {
                        <MudFab OnClick="Compare" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Compare" Class="d-flex" Size="Size.Small" Title="Compare" />
                    }
                </FooterTemplate>
            </Column>
        </Columns>
    </MudDataGrid>
</ResizePanel>
