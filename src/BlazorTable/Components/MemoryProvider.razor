@typeparam TableItem
@inherits DataProviderBase<TableItem>

<CascadingValue Value="(IDataProvider<TableItem>)this" Name="DataProvider">
    @ChildContent
</CascadingValue>

@code {
    [Parameter] public override long PageSize { get; set; } = 30;

    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public IEnumerable<TableItem> Items { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await Update();
    }

    public override IEnumerable<TableItem> GetData()
    {
        if (Items != null)
        {
            return Items;
        }

        return Enumerable.Empty<TableItem>();
    }
}