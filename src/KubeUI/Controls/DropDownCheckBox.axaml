<UserControl
    x:Class="KubeUI.Controls.DropDownCheckBox"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ComboBox x:Name="comboBox" ItemsSource="{ReflectionBinding Items}">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <CheckBox Content="{ReflectionBinding Name}" IsChecked="{ReflectionBinding IsChecked}" />
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>
