<UserControl
    x:Class="KubeUI.Views.ClusterErrorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:views="clr-namespace:KubeUI.Views"
    xmlns:vm="clr-namespace:KubeUI.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ClusterErrorViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0" Padding="5,0,0,0">Error connecting to the cluster</TextBlock>
        <TextBlock
            Grid.Row="1"
            Padding="5,0,0,0"
            Text="{Binding Error}" />
    </Grid>
</UserControl>
