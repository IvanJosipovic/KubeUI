
<ButtonGroup Size="Size.Small" title="Set the UI complexity level. Toggle to see more complex configuration options.">
    <BlazorButton Color="@(State.GetUILevel() == KubeUI.UILevel.Basic ? Color.Secondary : Color.Active)" Size="Size.Small" onclick="@((e) => State.SetUILevel(KubeUI.UILevel.Basic))">Basic</BlazorButton>
    <BlazorButton Color="@(State.GetUILevel() == KubeUI.UILevel.Advanced ? Color.Secondary : Color.Active)" Size="Size.Small" onclick="@((e) => State.SetUILevel(KubeUI.UILevel.Advanced))">Advanced</BlazorButton>
    <BlazorButton Color="@(State.GetUILevel() == KubeUI.UILevel.Expert ? Color.Secondary : Color.Active)" Size="Size.Small" onclick="@((e) => State.SetUILevel(KubeUI.UILevel.Expert))">Expert</BlazorButton>
</ButtonGroup>

@functions {
    [Inject] protected IState State { get; set; }

    protected override void OnInit()
    {
        State.PropertyChanged += (o, e) =>
        {
            StateHasChanged();
        };
    }
}