@typeparam TItem

<Card>
    <Card CardType="CardType.Header" onmouseover="@(() => { SetHelp.Invoke(Item.GetType().GetSummary()); })" HeadingSize="HeadingSize.H5">
        @Item.GetType().Name.AddSpacesToSentence().TrimVersionNumbers()
    </Card>
    <Card CardType="CardType.Body">
        @ChildContent
    </Card>
</Card>
<br />

@functions {
    [Parameter] protected Action<object> SetHelp { get; set; }

    [Parameter] protected TItem Item { get; set; }
    [Parameter] protected RenderFragment ChildContent { get; set; }
    protected Guid Id { get; set; } = Guid.NewGuid();
}
