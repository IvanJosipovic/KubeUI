@inherits ControlBase<TItem>
@typeparam TItem

<FormGroup IsRow="true" onmouseover="@(() => { base.SetHelp.Invoke(Parent.GetProperty(Name).GetSummary()); })">
    <BlazorLabel For="@Name" SM="3" Class="col-form-label-sm">@Name.AddSpacesToSentence().TrimVersionNumbers()</BlazorLabel>
    <BlazorCol SM="9">
        <input class="form-control form-control-sm" type="@Type" id="@Name" value="@Value" onchange="@((e) => ValueChanged.Invoke((TItem)e.Value))" readonly="@ReadOnly" />
        <FieldValidationResult results="@Results" Field="@Name" />
    </BlazorCol>
</FormGroup>

@functions {
    [Parameter] protected string Type { get; set; } = "text";
}
